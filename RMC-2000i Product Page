  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Tabs
      const tabs = document.querySelectorAll('.tab-btn');
      const panels = document.querySelectorAll('.tab-panel');
      tabs.forEach(btn => btn.addEventListener('click', () => {
        const target = btn.getAttribute('data-tab');
        panels.forEach(p => p.classList.add('hidden'));
        document.getElementById(target).classList.remove('hidden');
        tabs.forEach(b => b.classList.remove('border-b-2','border-blue-600','text-blue-600'));
        btn.classList.add('border-b-2','border-blue-600','text-blue-600');
      }));
      tabs[0].click();

      // Plans
      const planBtns = document.querySelectorAll('.plan-btn');
      const planPanels = document.querySelectorAll('.plan-panel');
      planBtns.forEach(btn => btn.addEventListener('click', () => {
        const plan = btn.getAttribute('data-plan');
        planPanels.forEach(p => p.classList.add('hidden'));
        document.getElementById(plan).classList.remove('hidden');
        planBtns.forEach(b => b.classList.remove('border-b-2','border-blue-600','text-blue-600'));
        btn.classList.add('border-b-2','border-blue-600','text-blue-600');
      }));
      planBtns[0].click();

      // Modals
      const modalQuote = document.getElementById('modalQuote');
      const modalDemo = document.getElementById('modalDemo');
      document.getElementById('openQuote').addEventListener('click', (e) => {
        document.getElementById('productField').value = e.currentTarget.getAttribute('data-product');
        modalQuote.classList.remove('hidden'); modalQuote.classList.add('flex');
      });
      document.getElementById('openDemo').addEventListener('click', () => {
        modalDemo.classList.remove('hidden'); modalDemo.classList.add('flex');
      });
      document.getElementById('closeQuote').addEventListener('click', () => {
        modalQuote.classList.add('hidden'); modalQuote.classList.remove('flex');
      });
      document.getElementById('closeDemo').addEventListener('click', () => {
        modalDemo.classList.add('hidden'); modalDemo.classList.remove('flex');
      });
    });
  </script>
